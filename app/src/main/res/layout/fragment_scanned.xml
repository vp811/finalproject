<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/WalkingDescription"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:autoSizeTextType="uniform"
        android:text="Walking emits no CO2 and can be a great way to explroe your surroundings and discover new things."
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/Walking"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toEndOf="@+id/Walking"
        app:layout_constraintTop_toTopOf="@+id/Walking"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/Bus"
        android:layout_width="292dp"
        android:layout_height="161dp"
        android:background="#F1F1F1"
        android:paddingLeft="50dp"
        android:paddingTop="45dp"
        android:paddingRight="50dp"
        android:paddingBottom="45dp"
        android:src="@drawable/ic_baseline_directions_bus_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="246dp"
        android:layout_height="22dp"
        android:text="@string/you_scanned_a_bus"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/Bus"
        app:layout_constraintEnd_toEndOf="@+id/Bus"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="@+id/Bus"
        app:layout_constraintTop_toTopOf="@+id/Bus"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:autoSizeTextType="uniform"
        android:text="@string/a_bus_emits_14_lbs_of_co2_per_100_passenger_miles_a_84_decrease_compared_to_cars"
        app:layout_constraintBottom_toBottomOf="@+id/Bus"
        app:layout_constraintEnd_toEndOf="@+id/Bus"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/Bus"
        app:layout_constraintTop_toTopOf="@+id/Bus"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/OtherAlternatives"
        android:layout_width="236dp"
        android:layout_height="27dp"
        android:text="Other Alternatives"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.165"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.339" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_baseline_pedal_bike_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:id="@+id/BicycleDescription"
        android:layout_width="241dp"
        android:layout_height="55dp"
        android:autoSizeTextType="uniform"
        android:text="Bicycles emit no CO2 per passenger mile and can be a great alternative to any form of transportation"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/Walking"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_baseline_directions_walk_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.586" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoSizeTextType="uniform"
        android:text="Walking"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Walking"
        app:layout_constraintEnd_toEndOf="@+id/Walking"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Walking"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:src="@drawable/ic_baseline_directions_car_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.723" />

    <TextView
        android:id="@+id/Carpool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carpool"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.997" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="243dp"
        android:layout_height="93dp"
        android:autoSizeTextType="uniform"
        android:text="The CO2 emissions per passenger mile can vary greatly depending on passenger count but for situations where public transit is not availible it can be a good alternative"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.744" />

    <Button
        android:id="@+id/GoHome"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:layout_marginBottom="30dp"
        android:autoSizeTextType="uniform"
        android:text="Go Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.927" />

    <Button
        android:id="@+id/ScanAgain"
        android:layout_width="104dp"
        android:layout_height="51dp"
        android:layout_marginStart="92dp"
        android:autoSizeTextType="uniform"
        android:text="Scan Again"
        app:layout_constraintBottom_toBottomOf="@+id/GoHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/GoHome"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/Bicycles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bicycles"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>